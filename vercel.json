{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.11" }
    },
    {
      "src": "career_cast/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "env": {
  "SUPABASE_URL": "@supabase_url",
  "SUPABASE_KEY": "@supabase_key",
  "OPENAI_API_KEY": "@openai_api_key",
  "DJANGO_SETTINGS_MODULE": "career_cast.settings",
  "PYTHONUNBUFFERED": "1",
  "TMPDIR": "/tmp"
},
  "functions": {
    "api/**/*.py": {
      "maxDuration": 30
    }
  }
}
