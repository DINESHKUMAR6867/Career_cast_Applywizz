{
  "version": 2,
  "builds": [
    {
      "src": "career_cast/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.11" }
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "career_cast/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "career_cast.settings",
    "PYTHONUNBUFFERED": "1",
    "TMPDIR": "/tmp"
  }
}
