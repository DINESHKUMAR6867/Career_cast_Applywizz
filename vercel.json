{
  "version": 2,
  "env": {
    "VERCEL": "true"
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "career_cast.settings"
    }
  },
  "builds": [
    {
      "src": "career_cast/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/tmp/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "career_cast/wsgi.py"
    }
  ]
}
